library IEEE;
use IEEE.STD_LOGIC_1164.ALL;

entity to_7seg4 is
    Port ( D : in  STD_LOGIC_VECTOR (3 downto 0);
          seg74 : out  STD_LOGIC_VECTOR (7 downto 0)
             );
end to_7seg4;

architecture Behavioral of to_7seg4 is

begin

--'a' corresponds to MSB of seg74 and 'g' corresponds to LSB of seg74.
process (D)
BEGIN
    case D is
        when "0000"=> seg74 <="01000000";  -- '0'
        when "0001"=> seg74 <="01001111";  -- '1'
        when "0010"=> seg74 <="00010010";  -- '2'
        when "0011"=> seg74 <="00000110";  -- '3'
        when "0100"=> seg74 <="01001100";  -- '4' 
        when "0101"=> seg74 <="00100100";  -- '5'
        when "0110"=> seg74 <="00100000";  -- '6'
        when "0111"=> seg74 <="00001111";  -- '7'
        when "1000"=> seg74 <="00000000";  -- '8'
        when "1001"=> seg74 <="00000100";  -- '9'
        when "1010"=> seg74 <="00001000";  -- 'A'
        when "1011"=> seg74 <="01100000";  -- 'b'
        when "1100"=> seg74 <="00110001";  -- 'C'
        when "1101"=> seg74 <="01000010";  -- 'd'
        when "1110"=> seg74 <="00110000";  -- 'E'
        when "1111"=> seg74 <="00111000";  -- 'F'
        when others =>  NULL;
    end case;
end process;

end Behavioral;